<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <!-- Odoo View Definition for Whatsapp Message Form -->
   <record id="assignment_refund_wizard_view_form" model="ir.ui.view">
       <field name="name">assignment.refund.message.view.form</field>
       <field name="model">assignment.wizard.refund</field>
       <field name="priority" eval="8"/>
       <field name="arch" type="xml">
           <form string="Assignment Wizard">
               <group>
                   <field name="refund_id" invisible="1"/>
                   <field name="assign_to"/>
               </group>
               <group>
                   <field name="student_id"/>
                   <field name="admission_id"/>

               </group>
               <footer>
                   <button name="act_confirm" string="Confirm" type="object" class="oe_highlight"/>
                   <button name="cancel" string="Cancel" special="cancel"/>
               </footer>
           </form>
       </field>
   </record>
</odoo>
